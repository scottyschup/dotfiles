au FocusLost * set number
au FocusGained * set relativenumber
highlight ColorColumn ctermbg=DarkBlue guibg=DarkBlue
map <space> /
map <c-space> ?
set autoread
set autoindent
set backspace=indent,eol,start
set cmdheight=2
set colorcolumn=80,100
set encoding=utf8
set expandtab
set hlsearch
set ignorecase
set incsearch
set listchars=tab:<-,trail:~
set mat=2
set number " adds line numbers
set numberwidth=5
set rnu
set shiftwidth=2
set showmatch
set showcmd
set smartcase
set smarttab
set softtabstop=0
set tabstop=4
set wildmenu
syntax on
