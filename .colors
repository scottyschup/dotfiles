#! /bin/zsh

# Regular Colors
export BLK="\e[0;30m"  # Black
export RED="\e[0;31m"  # Red
export GRN="\e[0;32m"  # Green
export YLW="\e[0;33m"  # Yellow
export BLU="\e[0;34m"  # Blue
export PPL="\e[0;35m"  # Purple
export CYN="\e[0;36m"  # Cyan
export WHT="\e[0;37m"  # White

# Bold
export BLK_BOLD="\e[1;30m"  # Black
export RED_BOLD="\e[1;31m"  # Red
export GRN_BOLD="\e[1;32m"  # Green
export YLW_BOLD="\e[1;33m"  # Yellow
export BLU_BOLD="\e[1;34m"  # Blue
export PPL_BOLD="\e[1;35m"  # Purple
export CYN_BOLD="\e[1;36m"  # Cyan
export WHT_BOLD="\e[1;37m"  # White

# Underline
export BLK_UNDERLINE="\e[4;30m"  # Black
export RED_UNDERLINE="\e[4;31m"  # Red
export GRN_UNDERLINE="\e[4;32m"  # Green
export YLW_UNDERLINE="\e[4;33m"  # Yellow
export BLU_UNDERLINE="\e[4;34m"  # Blue
export PPL_UNDERLINE="\e[4;35m"  # Purple
export CYN_UNDERLINE="\e[4;36m"  # Cyan
export WHT_UNDERLINE="\e[4;37m"  # White

# Background
export ON_BLK="\e[40m"  # Black
export ON_RED="\e[41m"  # Red
export ON_GRN="\e[42m"  # Green
export ON_YLW="\e[43m"  # Yellow
export ON_BLU="\e[44m"  # Blue
export ON_PPL="\e[45m"  # Purple
export ON_CYN="\e[46m"  # Cyan
export ON_WHT="\e[47m"  # White

# Intense
export IRED="\e[0;91m"  # Red

# Reset all
export NONE="\e[0m"  # Text Reset

echo "Sourced .$RED""c$YLW""o$GRN""l$CYN""o$BLU""r$PPL""s$NONE!"
