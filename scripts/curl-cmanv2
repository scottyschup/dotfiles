        placementType: 'advantage_mobile_home_featured_programs',
        productType: 'advantage',
        productPlacementCategory: 'advantage_mobile_placements',
        priority: 100,
        headline: 'Something go here',
        colorPair: {
          background: 'white',
          foreground: 'black',
        },
        theme: 'rallyWhite',
      },
    ]

    arcade_placements = [
      {
        placementType: 'arcade_carousel',
        productType: 'arcade',
        productPlacementCategory: 'arcade_dashboard_placements',
        priority: 600,
        headline: 'Do all placements have headlines?',
        colorPair: {
          background: 'white',
          foreground: 'black',
        },
        theme: 'rallyWhite',
      },
      {
        placementType: 'arcade_rx',
        productType: 'arcade',
        productPlacementCategory: 'arcade_secondary_placements',
        priority: 300,
        headline: 'Do all placements have headlines?',
        colorPair: {
          background: 'white',
          foreground: 'black',
        },
        theme: 'rallyWhite',
      },
      {
        placementType: 'arcade_resources_text',
        productType: 'arcade',
        productPlacementCategory: 'arcade_resource_page_placements',
        priority: 100,
        headline: "Hi! I'm an Arcade Resource Page headline!",
        colorPair: {
          background: 'white',
          foreground: 'black',
        },
        theme: 'rallyRedMedium',
      }
    ].sample(rand(1..4))

    case product
    when 'advantage'
      advantage_placements
    when 'arcade'
      arcade_placements
    when 'both'
      advantage_placements + arcade_placements
    else
      []
    end.each_with_object({}) { |el, agg| agg[el[:placementType]] = el }
  end

